          },
        });

        // មុខងារបញ្ជូនទិន្នន័យតាម AJAX
        $("form").on("submit", function (e) {
          e.preventDefault();
          Swal.fire({
            title: "កំពុងពិនិត្យព័ត៌មាន...",
            allowOutsideClick: false,
            didOpen: () => {
              Swal.showLoading();
            },
          });

          $.ajax({
            type: "POST",
            url: "/api/register",
            data: $(this).serialize(),
            success: function (res) {
              Swal.fire({
                title: "ជោគជ័យ! 🎉",
                text: "ចុះឈ្មោះរួចរាល់! ប្រព័ន្ធនឹងនាំប្អូនទៅកាន់ Telegram...",
                icon: "success",
                timer: 2000,
                showConfirmButton: false,
                customClass: { popup: "rounded-[2rem]" },
              }).then(() => {
                window.location.href = "https://t.me/+LSPpiivNN4plMmJl"; // Redirect ទៅ Telegram
              });
            },
            error: function (err) {
              Swal.fire({
                title: "មានបញ្ហា!",
                text: err.responseJSON
                  ? err.responseJSON.message
                  : "លេខទូរស័ព្ទនេះប្រហែលជាមានរួចហើយបង!",
                icon: "error",
                confirmButtonColor: "#3b82f6",
                customClass: { popup: "rounded-[2rem]" },
              });
            },
          });
        });
      });
    </script>
