<!DOCTYPE html>
<html lang="km">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - Secure Access</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Kantumruy+Pro:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Kantumruy Pro", sans-serif;
      }
      .glass-effect {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
      }
      .animate-float {
        animation: float 6s ease-in-out infinite;
      }
      @keyframes float {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }
    </style>
  </head>
  <body
    class="bg-gradient-to-br from-slate-900 via-indigo-950 to-slate-900 min-h-screen flex items-center justify-center p-6"
  >
    <div
      class="absolute top-20 left-20 w-64 h-64 bg-blue-600/10 rounded-full blur-3xl animate-float"
    ></div>
    <div
      class="absolute bottom-20 right-20 w-80 h-80 bg-indigo-600/10 rounded-full blur-3xl animate-float"
      style="animation-delay: 2s"
    ></div>

    <div
      class="max-w-md w-full glass-effect p-10 rounded-[3rem] shadow-[0_20px_50px_rgba(0,0,0,0.5)] relative z-10 border border-white/10"
    >
      <div class="text-center mb-10">
        <div
          class="bg-indigo-600 w-20 h-20 rounded-3xl flex items-center justify-center mx-auto mb-6 shadow-xl shadow-indigo-500/20 ring-4 ring-indigo-50"
        >
          <svg
            class="w-10 h-10 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            ></path>
          </svg>
        </div>
        <h2 class="text-3xl font-extrabold text-slate-800 tracking-tight">
          Admin Login
        </h2>
        <p
          class="text-slate-400 text-sm mt-2 font-medium uppercase tracking-widest"
        >
          Secure Access Only
        </p>
      </div>

      <form action="/admin/login" method="POST" class="space-y-8">
        <div class="group">
          <label
            class="block text-sm font-bold text-gray-700 mb-2 ml-1 transition-colors group-focus-within:text-indigo-600"
            >Password សម្ងាត់ <span class="text-red-500">*</span></label
          >
          <div class="relative">
            <span
              class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-400"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-3.257a2 2 0 01.586-1.414l9.586-9.586A6 6 0 1121 9z"
                ></path>
              </svg>
            </span>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="••••••••"
              required
              class="w-full pl-12 pr-12 py-4 border border-gray-200 rounded-2xl text-slate-900 outline-none transition-all duration-300 focus:ring-4 focus:ring-indigo-100 focus:border-indigo-600 bg-gray-50/50"
            />

            <button
              type="button"
              onclick="togglePassword()"
              class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-indigo-600 transition-colors"
            >
              <svg
                id="eyeIcon"
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                ></path>
              </svg>
            </button>
          </div>
        </div>

        <button
          type="submit"
          class="w-full h-16 bg-gradient-to-r from-indigo-600 to-blue-700 text-white font-bold rounded-2xl shadow-xl shadow-indigo-200 hover:shadow-indigo-300 hover:-translate-y-1 transition-all duration-300 text-lg uppercase tracking-wider"
        >
          ចូលទៅកាន់ Dashboard
        </button>
      </form>

      <div class="mt-10 flex items-center justify-center space-x-4 opacity-30">
        <div class="h-[1px] w-10 bg-gray-300"></div>
        <span
          class="text-[9px] uppercase tracking-[0.3em] text-gray-500 font-bold italic"
          >Admin Guard System v1.0</span
        >
        <div class="h-[1px] w-10 bg-gray-300"></div>
      </div>
    </div>

    <script>
      // មុខងារ បិទ/បើក មើល Password
      function togglePassword() {
        const passwordInput = document.getElementById("password");
        const eyeIcon = document.getElementById("eyeIcon");
        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          eyeIcon.innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a10.05 10.05 0 011.012-2.125M17.34 17.34a10.012 10.012 0 01-1.34 1.485M21 21l-4.35-4.35M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>';
        } else {
          passwordInput.type = "password";
          eyeIcon.innerHTML =
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>';
        }
      }
    </script>
  </body>
</html>
